class Solution {
private:
    int mySqrt(int x) {
        if(x < 0) {
            return -1;
        }
        if(x == 0) {
            return 0;
        }
        int l = 1, r = x/2+1;
        while(l <= r) {
            int mid = (l+r)/2;
            if(x/mid >= mid && x/(mid+1) < (mid+1)) {
                return mid;
            }    
            else if(x/mid > mid) {
                l = mid + 1;
            }
            else {
                r = mid - 1;
            }   
        }
        return -1;
    }
public:
    bool judgeSquareSum(int c) {
        int root = mySqrt(c);
        int l = 0, r = root;    
        while(l <= r) {
            if(l*l + r*r == c) {
                return true;
            }
            else if(l*l + r*r < c) {
                l++;
            }
            else {
                r--;
            }
        }
        return false;
    }
};
